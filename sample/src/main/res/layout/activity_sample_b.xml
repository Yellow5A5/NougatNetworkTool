<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_turn_back"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn back First Activity."/>

    <Button
        android:id="@+id/btn_get_network_type"
        android:layout_below="@id/btn_turn_back"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get NetworkClass()"/>

    <Button
        android:id="@+id/btn_get_is_connect"
        android:layout_below="@id/btn_get_network_type"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get IsConnect()"/>

    <Button
        android:id="@+id/btn_send_broadcast"
        android:layout_below="@id/btn_get_is_connect"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To SendBroadcast()"/>

</RelativeLayout>